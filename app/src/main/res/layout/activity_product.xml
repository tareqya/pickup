<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ProductActivity">

    <ImageView
        android:id="@+id/product_IV_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />
    <TextView
        android:id="@+id/product_TV_name"
        android:padding="10dp"
        android:layout_below="@id/product_IV_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="Product Name"
        />
    <TextView
        android:id="@+id/product_TV_price"
        android:padding="10dp"
        android:text="100"
        android:layout_below="@id/product_TV_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/pink"
        />
    <TextView
        android:id="@+id/product_TV_description"
        android:padding="10dp"
        android:text="Description"
        android:layout_below="@id/product_TV_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        />

    <Button
        android:id="@+id/product_BTN_order"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Order"
        android:layout_below="@+id/product_TV_description"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>